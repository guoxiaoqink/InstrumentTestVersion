<?xml version="1.0" encoding="utf-8"?>
<!-- shape如果不声明形状默认是正方形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 设置圆角 -->
    <corners android:radius="4px" >
    </corners>
    <!-- 设置填充色 -->
    <solid android:color="#40ffffff" >
    </solid>
    <!-- 设置边框的颜色和宽度 -->
    <stroke
            android:width="1px"
            android:color="#ffffff" >
    </stroke>
</shape>
