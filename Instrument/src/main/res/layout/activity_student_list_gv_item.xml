<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <com.example.tu4.view.CircleImageView
        android:id="@+id/img_student_list_item_photo"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:src="@mipmap/a"
        android:layout_centerHorizontal="true"
        app:border_color="@color/sffffff"
        app:border_width="@dimen/px1"/>
    <TextView
        android:id="@+id/tv_student_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_student_list_item_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_7"
        android:text="名称"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp12"
        android:layout_gravity="center"/>

</RelativeLayout>
