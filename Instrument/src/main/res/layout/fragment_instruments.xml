<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f0f0f0"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:background="@color/s97c8cd">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/instrument"
                android:textColor="@color/sffffff"
                android:textSize="@dimen/px34"/>

            <ImageView
                android:id="@+id/imageview_instrument_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:src="@mipmap/lookup"/>

        </RelativeLayout>

        <com.example.tu4.view.AutoPlayingViewPager
            android:id="@+id/auto_play_viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp200"></com.example.tu4.view.AutoPlayingViewPager>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_marginTop="@dimen/instrument_instrument_recyclejutoTop"
            android:background="@color/color_d1d1d1"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView_instrument_instrument"
            android:layout_width="match_parent"
            android:layout_height="@dimen/instrument_instrument_recycleviewHeight"
            android:layout_centerVertical="true"
            android:background="@color/color_ffffff"
            android:scrollbars="none"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_marginTop="@dimen/instrument_instrument_recyclejutoTop"
            android:background="@color/color_d1d1d1"/>

        <com.example.tu4.view.ResolveConflictsScoolviewListview
            android:id="@+id/listview_instument_Album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.example.tu4.view.ResolveConflictsScoolviewListview>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/instrument_instrument_viewpagerTop">

            <com.example.tu4.view.ResolveConflictsScoolviewListview
                android:id="@+id/listview2_instument_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/s999999"
                android:divider="@color/color_d1d1d1"
                android:dividerHeight="@dimen/px1"></com.example.tu4.view.ResolveConflictsScoolviewListview>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_marginTop="@dimen/instrument_instrument_recyclejutoTop"
            android:background="@color/color_d1d1d1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff">

            <com.example.tu4.view.ResolveConflictsScoolviewGridview
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridview_instrument_instrument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/instrument_instrument_gridviewToleft"
                android:layout_marginRight="@dimen/instrument_instrument_gridviewToright"
                android:layout_marginTop="@dimen/instrument_instrument_gridviewTotop"
                android:gravity="center"
                android:horizontalSpacing="@dimen/instrument_instrument_griview_horizontal"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="@dimen/instrument_instrument_gridview_verticalSpacing"/>
        </RelativeLayout>


    </LinearLayout>
</ScrollView>
