<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/s97c8cd">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:src="@mipmap/white_modle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/instrument_details"
            android:textColor="@color/sffffff"
            android:textSize="@dimen/px34" />


    </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:src="@mipmap/instrument1"
            android:id="@+id/imageView" />

        <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <!--课程XXXXX-->
        <TextView
            android:id="@+id/tv_instrument_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp15"
            android:text="乐器XXXXXXX"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp15" />
        <!--等级XXX-->
        <TextView
            android:id="@+id/tv_instrument_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_instrument_name"
            android:layout_below="@+id/tv_instrument_name"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:text="￥5000"
            android:textSize="@dimen/dp_17"
            android:textColor="@color/color_f49c41"/>
        <TextView
            android:id="@+id/tv_old_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_instrument_level"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/tv_instrument_name"
            android:layout_marginTop="@dimen/dp10"
            android:text="￥6000"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/color_cccccc"/>
        <!--5000.00-->
            <TextView
                android:id="@+id/tv_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_instrument_name"
                android:layout_below="@+id/tv_instrument_level"
                android:layout_marginBottom="@dimen/dp10"
                android:text="运费：000"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/color_999999"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@id/tv_freight"
                android:layout_marginRight="10dp"
                android:id="@+id/tv_place"
                android:text="上海"
                android:textColor="@color/color_999999"
                android:layout_height="wrap_content" />




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp10"
            android:background="@color/color_f0f0f0"
            />
<TextView
    android:layout_width="wrap_content"
    android:textSize="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp10"
    android:textColor="@color/color_666666"
    android:text="@string/product_parameter"
    android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/color_f0f0f0"

           />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp8"
        android:text="参数1：xxx"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp8"
        android:text="参数2 ：XXXXXXXX"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp8"
        android:text="参数3 ：XXXXXXXX"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp8"
        android:text="参数4 ：XXXXXXXX"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp12" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/dp10"
            android:layout_alignLeft="@id/tv_parameter"
            android:layout_marginTop="@dimen/dp10"
            android:text="商品描述"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp12" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp10"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/color_d1d1d1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示的行布局数量是由适配器类的getcount方法返回的数,显示的行布局数量是由适配器类的
                "
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp10"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/details1"
                android:layout_height="211dp"
                android:id="@+id/imageView2" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/details1"
                android:layout_height="211dp"
                android:id="@+id/imageView3"
                android:layout_marginBottom="@dimen/dp_32"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_60">
            <TextView
                android:id="@+id/tv_altogether"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计（含运费）"
                android:textSize="@dimen/dp_13"
                android:textColor="@color/color_999999"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp12"

                />
            <TextView
                android:layout_width="wrap_content"
                android:text="￥5000"
                android:textColor="@color/color_f49c41"
                android:textSize="@dimen/dp18"
                android:layout_toRightOf="@id/tv_altogether"
                android:layout_marginTop="@dimen/dp12"
                android:padding="@dimen/dp3"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:background="@drawable/button_pay"
                android:layout_marginTop="@dimen/dp12"
                android:text="购买"
                android:layout_marginRight="@dimen/dp10"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_d1d1d1"
            android:layout_height="@dimen/dp1"
            />


    </LinearLayout>


</ScrollView>
