<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:id="@+id/imageview_instrument"
            android:layout_width="@dimen/instrument_instrument_gridviewitem_imagewidth"
        android:layout_height="@dimen/istrument_instrument_gridviewitem_imageHeight"
        android:src="@mipmap/instrument_instrument" />
    <TextView
            android:id="@+id/textview_instrumentname"
            android:layout_width="@dimen/instrument_instrument_gridviewitem_imagewidth"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_instrument"
        android:layout_marginTop="@dimen/instrument_instrument_text1ToTop"
        android:text="乐器名称乐器名称乐器名称"
            android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_instrument_instrument_gridviewitem_textSize"
    />

    <LinearLayout
            android:layout_width="@dimen/instrument_instrument_gridviewitem_imagewidth"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_instrumentname"
        android:layout_marginTop="@dimen/instrument_instrument_text1ToTop"
        android:orientation="horizontal"
    >
        <TextView
                android:id="@+id/textview_instrument_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥ 15.00"
                android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_instrument_instrument_gridviewitem_text2Size"
        />

        <TextView
                android:id="@+id/textview_instrument_oldmoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/textview_instrumentname"
            android:layout_marginLeft="@dimen/instrument_instrument_text3ToLeft"
                android:layout_toRightOf="@id/textview_instrument_money"
            android:gravity="center"
            android:text="30.00"
                android:textColor="@color/color_cccccc"
            android:textSize="@dimen/sp_instrument_instrument_gridviewitem_text3Size"
        />
    </LinearLayout>


</RelativeLayout>
