<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tv_course_calendar_time"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="14:00"
            android:textSize="@dimen/course_time_text_size"
            android:textColor="@color/color_97c8cd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_cc_name_title"
            android:layout_toRightOf="@id/tv_course_calendar_time"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/course_name_margin_top"
            android:text="课程："
            android:textSize="@dimen/course_name_text_size"
            android:textColor="@color/color_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_cc_name"
            android:layout_toRightOf="@id/tv_cc_name_title"
            android:layout_marginTop="@dimen/course_name_margin_top"
            android:text="XXXXXX"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/course_name_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_cc_course_num"
            android:layout_toRightOf="@id/tv_cc_name"
            android:layout_alignTop="@id/tv_cc_name"
            android:text="(课时3)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_cc_add_title"
            android:layout_below="@id/tv_cc_name_title"
            android:layout_alignLeft="@id/tv_cc_name_title"
            android:layout_marginTop="@dimen/add_margin_top"
            android:text="地址："
            android:textSize="@dimen/add_text_size"
            android:textColor="@color/color_cccccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_cc_add"
            android:layout_toRightOf="@id/tv_cc_add_title"
            android:layout_alignTop="@id/tv_cc_add_title"
            android:text="XX区XX大厦XX楼"
            android:textSize="@dimen/add_text_size"
            android:textColor="@color/color_cccccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <View
            android:layout_below="@id/tv_cc_add_title"
            android:layout_marginTop="@dimen/course_name_margin_top"
            android:background="@color/color_d1d1d1"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
</RelativeLayout>