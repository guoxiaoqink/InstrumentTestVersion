<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_video_recoder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/s000000"
    tools:context="com.example.tu4.activity.VideoRecordActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@mipmap/video_recorder_arrow_left"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/video_recorder_ok"/>

    <TextView
        android:id="@+id/recorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recorder"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_15"/>

    <ImageButton
        android:id="@+id/video_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/video_stop"
        android:background="@color/s000000"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/recorder"
        android:layout_marginBottom="@dimen/dp_10"/>
    <TextView
        android:id="@+id/video_time"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_20"
        android:text="12.20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/video_button"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_centerHorizontal="true"/>


    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@color/color_d1d1d1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
