<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_leave_word_stud_photo"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_39"
            android:layout_margin="@dimen/dp_10"
            android:background="@color/color_d1d1d1"/>

        <TextView
            android:id="@+id/tv_leave_word_stud_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/img_leave_word_stud_photo"

            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_leave_wordm_stud_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_leave_word_stud_name"
            android:layout_below="@id/tv_leave_word_stud_name"
            />

        <TextView
            android:id="@+id/tv_leave_word_stud_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_leave_word_stud_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"

            android:textColor="@color/color_cccccc"
            android:textSize="@dimen/sp_11"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_leave_word_stud_name"
            android:layout_below="@id/tv_leave_wordm_stud_context"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">

            <FrameLayout
                android:id="@+id/fl_leave_word_stud_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/img_leave_word_stud_video"
                    android:layout_width="@dimen/dp_82"
                    android:layout_height="@dimen/dp_68"
                    android:layout_alignLeft="@id/tv_leave_word_stud_name"
                    android:layout_below="@id/tv_leave_wordm_stud_context"
                    android:background="@color/color_d1d1d1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_my_message_video"/>

            </FrameLayout>


            <LinearLayout
                android:id="@+id/ll_leave_word_stue_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/fl_leave_word_stud_video"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_leave_word_stud_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="更多"
                    android:textColor="@color/color_97c8cd"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:id="@+id/img_leave_word_stud_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/ic_arrow_bottom_blue"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <com.example.tu4.view.ResolveConflictsScoolviewListview
        android:id="@+id/lv_my_leave_words_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_60"
        android:background="@drawable/stroke_line_up"
        android:visibility="gone">

    </com.example.tu4.view.ResolveConflictsScoolviewListview>
</LinearLayout>
