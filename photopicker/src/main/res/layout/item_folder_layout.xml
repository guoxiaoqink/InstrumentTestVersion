<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/imageview_folder_img"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_photo_loading" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有图片"

            android:textColor="#666666"
            android:textSize="15sp" />

        <!--  <TextView
              android:id="@+id/textview_photo_num"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="0张"

              android:visibility="invisible"
              android:textSize="16sp"
              android:textColor="#bdbdbd"/>-->
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_folder_select"
        android:layout_width="15dp"
        android:layout_height="15dp"

        android:src="@drawable/ic_dir_choose"
        android:visibility="visible" />

</LinearLayout>
